double pi = 3.1415
string name = "John"

if (name == "John") {
    print("Hello, $name", EOL)
} else {
    print("Who are you?", EOL)
}

print("Guess PI: ", EOL)
string guess
while (guess = readline()) {
    if (guess == pi) {
        print("You got it!", EOL)
        break
    } else {
        print("Nope, try again", EOL, "Guess PI: ")
    }
}

print("Goodbye", EOL)
